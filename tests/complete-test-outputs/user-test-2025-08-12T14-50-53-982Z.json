{
  "name": "Podcast Content Distribution Workflow",
  "nodes": [
    {
      "id": "rssFeedReadTrigger_1",
      "type": "n8n-nodes-base.rssFeedReadTrigger",
      "position": [
        470,
        300
      ],
      "parameters": {
        "feedUrl": "https://example.com/podcast/rss.xml"
      },
      "name": "RSS Feed Monitor",
      "typeVersion": 1,
      "onError": "stopWorkflow"
    },
    {
      "id": "httpRequest_1",
      "type": "n8n-nodes-base.httpRequest",
      "position": [
        870,
        300
      ],
      "parameters": {
        "url": "={{ $json.enclosure.url }}",
        "method": "GET"
      },
      "name": "Download Audio File",
      "typeVersion": 4.2,
      "onError": "continueRegularOutput"
    },
    {
      "id": "httpRequest_2",
      "type": "n8n-nodes-base.httpRequest",
      "position": [
        1270,
        300
      ],
      "parameters": {
        "url": "https://api.openai.com/v1/audio/transcriptions",
        "method": "POST",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{ $credentials.openAiApi.apiKey }}"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "file",
              "value": "={{ $binary.data }}"
            },
            {
              "name": "model",
              "value": "whisper-1"
            }
          ]
        }
      },
      "name": "Transcribe Audio",
      "typeVersion": 4.2,
      "onError": "continueRegularOutput",
      "maxTries": 3
    },
    {
      "id": "openAi_1",
      "type": "n8n-nodes-base.openAi",
      "position": [
        1470,
        300
      ],
      "parameters": {
        "model": "gpt-4",
        "messages": {
          "values": [
            {
              "role": "system",
              "content": "You are a content marketing expert. Generate a blog article, LinkedIn post, and Twitter thread from the provided podcast transcript."
            },
            {
              "role": "user",
              "content": "Transcript: {{ $json.text }}\n\nPlease create:\n1. A blog article (800-1200 words)\n2. A LinkedIn post (300-500 words)\n3. A Twitter thread (5-7 tweets)\n\nReturn as JSON with keys: blogArticle, linkedInPost, twitterThread"
            }
          ]
        }
      },
      "name": "Generate Content",
      "typeVersion": 1.1,
      "onError": "continueRegularOutput",
      "maxTries": 3
    },
    {
      "id": "twitter_1",
      "type": "n8n-nodes-base.twitter",
      "position": [
        1870,
        200
      ],
      "parameters": {
        "text": "={{ $json.twitterThread }}",
        "resource": "tweet",
        "operation": "create"
      },
      "name": "Post Twitter Thread",
      "typeVersion": 2,
      "onError": "continueRegularOutput"
    },
    {
      "id": "linkedIn_1",
      "type": "n8n-nodes-base.linkedIn",
      "position": [
        2070,
        300
      ],
      "parameters": {
        "text": "={{ $json.linkedInPost }}",
        "resource": "post",
        "operation": "create"
      },
      "name": "Post LinkedIn",
      "typeVersion": 1,
      "onError": "continueRegularOutput"
    },
    {
      "id": "notion_1",
      "type": "n8n-nodes-base.notion",
      "position": [
        2470,
        400
      ],
      "parameters": {
        "resource": "databasePage",
        "operation": "create",
        "databaseId": "{{ $credentials.notion.databaseId }}",
        "properties": {
          "Title": {
            "title": [
              {
                "text": {
                  "content": "{{ $('RSS Feed Monitor').first().json.title }}"
                }
              }
            ]
          },
          "Transcript": {
            "rich_text": [
              {
                "text": {
                  "content": "{{ $('Transcribe Audio').first().json.text }}"
                }
              }
            ]
          },
          "Blog Article": {
            "rich_text": [
              {
                "text": {
                  "content": "{{ $json.blogArticle }}"
                }
              }
            ]
          },
          "LinkedIn Post": {
            "rich_text": [
              {
                "text": {
                  "content": "{{ $json.linkedInPost }}"
                }
              }
            ]
          },
          "Twitter Thread": {
            "rich_text": [
              {
                "text": {
                  "content": "{{ $json.twitterThread }}"
                }
              }
            ]
          }
        }
      },
      "name": "Archive in Notion",
      "typeVersion": 2.2,
      "onError": "continueRegularOutput"
    },
    {
